<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer 1 (outermost) -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Shadow layer 2 -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Shadow layer 3 -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#70000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Main image area (transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
</layer-list> 